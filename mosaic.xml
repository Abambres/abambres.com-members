<?xml version="1.0" encoding="UTF-8" ?>
<Module>

    <ModulePrefs
		title="The Abambres Legacy Members' Mosaic"
		title_url="http://abambres.com/"
		description="Creates a mosaic with public avatars of members of The Abambres Legacy."
		screenshot=""
		thumbnail=""
		author="Alfredo Abambres"
		author_email="legacy@abambres.com"
		height="450"
	/>
	
	<!-- SETTINGS -->
    <UserPref name="BG_COLOR"     	display_name="Background Color" default_value="transparent" datatype="string"/>
	<UserPref name="AVATAR_SIZE" 	display_name="Avatar Size/Dimension" required="true" default_value="48" datatype="string"/>

	<Content type="html"><![CDATA[
<!DOCTYPE html>
<html>
    <head>
        <title>The Abambres Legacy Members</title>
        <style>
	    * { margin: 0; padding: 0; }
            body {
                background-color: __UP_BG_COLOR__;
                padding: .3em;
                text-align: center;
            }
            img {
                border: 0;
                width: __UP_AVATAR_SIZE__px;
                height: __UP_AVATAR_SIZE__px;
            }
        </style>
    </head>
    <body>
        <div>
          <a title="César Abambres" href="http://cesar.abambres.com" target="_blank"><img alt="César Abambres" src="http://www.abambres.com/media/avatar-cesarabambres.jpg"></a>
          <a title="Daniela Monteiro" href="http://daniela.abambres.com" target="_blank"><img alt="Daniela Monteiro" src="http://www.abambres.com/media/avatar-danielamonteiro.jpg"></a>
          <a title="Alfredo Abambres" href="http://alfredo.abambres.com" target="_blank"><img alt="Alfredo Abambres" src="http://www.abambres.com/media/avatar-alfredoabambres.png"></a>
        </div>
    </body>
</html>
]]></Content>

</Module>

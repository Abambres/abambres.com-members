<?xml version="1.0" encoding="UTF-8" ?>
<Module>

    <ModulePrefs
		title="The Abambres Legacy Members' Mosaic"
		title_url="http://abambres.com/"
		description="Creates a mosaic with public avatars of members of The Abambres Legacy."
		screenshot=""
		thumbnail=""
		author="Alfredo Abambres"
		author_email="legacy@abambres.com"
		height="450"
	/>
	
	<!-- SETTINGS -->
    <UserPref name="BG_COLOR"     	display_name="Background Color" default_value="transparent" datatype="string"/>
	<UserPref name="AVATAR_SIZE" 	display_name="Avatar Size/Dimension" required="true" default_value="48" datatype="string"/>

	<Content type="html"><![CDATA[
<!DOCTYPE html>
<html>
    <head>
        <title>The Abambres Legacy Members</title>
        <style>
	    * { margin: 0; padding: 0; }
            body {
                background-color: __UP_BG_COLOR__;
                padding: .3em;
            }
            img {
                border: 0;
                width: __UP_AVATAR_SIZE__px;
                height: __UP_AVATAR_SIZE__px;
            }
        </style>
    </head>
    <body>
        <div>
            <a title="Alfredo Abambres" href="http://alfredo.abambres.com/" target="_blank"><img src="https://lh4.googleusercontent.com/-kUwj6Sza2fY/AAAAAAAAAAI/AAAAAAAAN34/133KNpd-UMo/s48-c-k/photo.jpg"></a>
        </div>
    </body>
</html>
]]></Content>

</Module>
